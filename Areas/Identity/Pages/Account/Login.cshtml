@page
@model LoginModel
@{
    Layout = "_LoginRegisterLayout.cshtml";
}
<div class="login-register-form">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="login-form">
                    <h2>تسجيل الدخول</h2>
                    <form id="account" method="post">
                        <div class="form-group">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="البريد الإلكتروني" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="كلمة المرور" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل حساب جديد</a>
                        </p>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل الدخول</button>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
