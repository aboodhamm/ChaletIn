@model Chaletin.Models.Model.BookingViewModel
<div class="payment">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="content">

                    <div class="title">
                        <h5> البطاقة  الإئتمانية</h5>
                    </div>

                    <div class="account">
                        <div class="image">
                            <p>دفع آمن ومضمون <img src="~/Image/credit-card.png" alt="" srcset=""></p>
                            <img class="master" src="~/Image/Group.png" alt="">
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-7">
                                <img src="~/Image/Group1052.png" alt="" srcset="">
                            </div>
                            <div class="col-12 col-md-6 col-lg-5">
                                <div class="row">
                                    <div class="col-12 col-md-6 col-lg-12">
                                        <label for="">رقم البطاقة</label>
                                        <input type="text" name="" placeholder="0000 0000 0000 0000">
                                    </div>
                                    <div class="row expire">
                                        <div class="col-12 col-md-6 col-lg-6">
                                            <label for="">CVV </label>
                                            <input type="text" name="" placeholder="000">
                                        </div>
                                        <div class="col-12 col-md-6 col-lg-6">
                                            <label for=""> تاريخ الإنتهاء</label>
                                            <input type="text" name="" placeholder=" 00 / 00">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pay">
                        <p>المبلغ الكلي <h5> <span> دينار </span> @Model.TotalAmount </h5></p>
                        <a class="btn btn-success" asp-controller="Farm" asp-action="ConfirmPayment" asp-route-id=@Model.Id>إدفع الآن  <i class="fa-solid fa-lock"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
