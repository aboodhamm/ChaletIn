@using Microsoft.AspNetCore.Identity
@using Chaletin.Areas.Identity.Data
@using System.Security.Claims
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject ChaletinDbContext _context
@{
    var isAdmin = _context.UserRoles.Where(x => x.RoleId == "1").Any(x => x.UserId == _context.Users.Where(x => x.Id == User.FindFirstValue(ClaimTypes.NameIdentifier)).Select(x => x.Id).FirstOrDefault()); 
}
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (!isAdmin)
        {
            <li class="nav-item">
                <a id="manage" class="nav-link" style="color:(255,255,255,.55)" asp-controller="User" asp-action="Profile">حجوراتي</a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="login" style="color: rgb(255, 255, 255);text-decoration: none;width: auto;padding: 8px;border: 2px solid #ffc825;border-radius: 105px;background-color: inherit;">تسجيل الخروج</button>
            </form>
        </li>
    }
    else
    {
        <li class="login">
            <a id="login" asp-area="Identity" asp-page="/Account/Login">
                <p>تسجيل الدخول <img src="~/Image/user (1).png" alt=""> </p>
            </a>
        </li>@*
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>*@
    }
</ul>
